@*@using ProductRating.Helpers*@
<!DOCTYPE html>
<!--
This is a starter template page. Use this page to start your new project from
scratch. This page gets rid of all links and provides the needed markup only.
-->
<html lang="en">
<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>@ViewData["Title"] - Product Rating System</title>

  <partial name="AdminLTE/_Styles" />
  <!-- Theme style -->
  @RenderSection("Styles", required: false)

  <link rel="stylesheet" href="~/css/adminlte.min.css">
</head>
<body class="hold-transition layout-top-nav ">
  <div class="wrapper">

    <!-- Navbar -->
    <partial name="AdminLTE/_TopNavigation" />
    <!-- /.navbar -->
    <!-- Main Sidebar Container -->
    @*<partial name="AdminLTE/_MainNavigation" />*@

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
      <!-- Content Header (Page header) -->
      <div class="content-header" style="padding-top: 8px; padding-bottom: 5px;">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">@ViewData["SubTitle"]</h1>
            </div><!-- /.col -->
            <div class="col-sm-6 DateFilter" id="daterangefilter" style="display:none;">
                <div class="form-group row" style="margin-bottom:0px;">
                <div class="col-sm-1">
                <label>From:</label>
                </div>
                <div class="col-sm-4">
                <div class="input-group">
                <input type="text" id="FromDateRange" class="form-control" name="FromDateRange"  data-inputmask='"mask": "9999-99-99"'/>
                    <div class="input-group-append">
                        <div class="input-group-text">B.S.</div>
                    </div>
                </div>
                </div>
                <div class="col-sm-1">
                <label>To:</label>
                </div>
                <div class="col-sm-4">
                <div class="input-group">
                <input type="text" id="ToDateRange" class="form-control" name="ToDateRange" data-inputmask='"mask": "9999-99-99"'/>
                    <div class="input-group-append">
                        <div class="input-group-text">B.S.</div>
                    </div>
                </div>
                </div>
                <div class="col-sm-2"><input type="button" value="Apply" id="applyDateFilter"/></div>
                </div>
            </div>
            <div class="col-sm-6 breadcrumbColshow" style="display:none;">
                @*@Html.Raw(Html.BuildBreadcrumbNavigation())*@
            </div><!-- /.col -->
          </div><!-- /.row -->
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content-header -->
      <!-- Main content -->
      <div class="content">
        <div class="container-fluid">
          @RenderBody()
        </div><!-- /.container-fluid -->
      </div>
      <!-- /.content -->
    </div>
    <!-- /.content-wrapper -->
    <!-- Control Sidebar -->
    <aside class="control-sidebar control-sidebar-dark">
      <!-- Control sidebar content goes here -->
      <div class="p-3">
        <h5>Title</h5>
        <p>Sidebar content</p>
      </div>
    </aside>
    <!-- /.control-sidebar -->
    <!-- Main Footer -->
    <partial name="AdminLTE/_Footer" />
  </div>
  <!-- ./wrapper -->
  <!-- REQUIRED SCRIPTS -->

  <partial name="AdminLTE/_Scripts" />
  @RenderSection("Scripts", required: false)
</body>
</html>
